// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  type        UserType  @relation(fields: [userTypeId], references: [id])
  userTypeId  Int
  firstname   String
  lastname    String
  addressLine String?
  homeNumber  String?
  postalCode  String?
  city        String?
  country     String?
  phone       String?    @unique
  companyName String?
  vatNumber   String?
  isActive    Boolean?  @default(true)
  createdDate DateTime? @default(now())
  updatedDate DateTime? @updatedAt
}

model UserType {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}
